.vod-img {
	width: 90%;
	margin: 0 auto;
}
.vod-img image {
	width: 100%;
	border-radius: 20rpx;
}
.vod-remarks {
	color: #808080;
	text-align: center;
	font-size: 24rpx;
	text-decoration: underline;
}
.vod-name {
	font-size: 24rpx;
	color: #FFFFFF;
	font-weight: 700;
	width: 100%;
	text-align: center;
}
.totop {
	position: fixed;
	z-index: 999999;
	color: #fff;
	width: 100rpx;
	height: 100rpx;
	bottom:calc(0px + 20px);
	right: 40rpx;
}

