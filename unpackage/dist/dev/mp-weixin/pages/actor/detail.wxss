
page {
	background-color: rgba(0, 0, 0, 0.8);
}
.detail-container {
	padding: 20rpx;
}
.actor-image {
	width: 80%;
	margin: 0 auto;
}
.actor-image image {
	width: 100%;
	border-radius: 20rpx;
}
.actor-tags {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: first baseline;
	padding: 20rpx 10rpx;
	flex-wrap: wrap;
}
.actor-tag {
	background-color: #000000;
	color: #808080;
	font-size: 28rpx;
	padding: 10rpx 20rpx;
	margin: 10rpx;
	border-radius: 10rpx;
}
.actor-content {
	background-color: #000000;
	color: #808080;
	border-radius: 20rpx;
	padding: 20rpx;
}
.random-btn{
	position: fixed;
	z-index: 1000;
	right: 10rpx;
	bottom: 40rpx;
}

