{
	"pages": [
		// pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home/index",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": true
			}

		},
		{
			"path": "pages/news/index",
			"style": {
				"navigationBarTitleText": "爱盼",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/vod/detail",
			"style": {
				"navigationBarTitleText": "详情",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/vod/list",
			"style": {
				"navigationBarTitleText": "视频列表",
				"enablePullDownRefresh": true
			}

		}
	    ,{
            "path" : "pages/vod/vod",
            "style" :                                                                                    
            {
                "navigationBarTitleText": "",
                "enablePullDownRefresh": false
            }
            
        }
    ],
	"globalStyle": {
		"pageOrientation": "portrait",
		"navigationBarTitleText": "爱盼影视",
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#000000",
		"backgroundColor": "#F8F8F8",
		"backgroundColorTop": "#F4F5F6",
		"backgroundColorBottom": "#F4F5F6",
		"mp-360": {
			"navigationStyle": "custom"
		},
		"h5": {
			"maxWidth": 1190,
			"navigationBarTextStyle": "black",
			"navigationBarBackgroundColor": "#F1F1F1"
		}

	},
	"tabBar": {
		"color": "#FFFFFF",
		"selectedColor": "#0aa0a8",
		"borderStyle": "black",
		"backgroundColor": "#000000",
		"list": [{
				"pagePath": "pages/home/index",
				"iconPath": "static/home.png",
				"selectedIconPath": "static/home-fill.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/vod/list",
				"iconPath": "static/video.png",
				"selectedIconPath": "static/video-fill.png",
				"text": "视频"
			}
		]
	}
}
